{
  "name": "demo-e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/demo-e2e/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["demo"],
  "targets": {
    "gen": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/src/specs"],
      "options": {
        "commands": [
          "pnpx playwright codegen localhost:4200 --output /apps/demo-e2e/src/spec.ts"
        ]
      },
      "dependsOn": [
        {
          "target": "serve",
          "params": "forward"
        }
      ]
    }
  }
}
