{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "target": "ESNext", 
    "outDir": "./dist",
    "declaration": true,
    "types": ["node", "vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.json", "src/**/*.vue"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "paths": {
    "@/*": ["src/*"],
    "@defs/*": ["src/defs/*"],
  },
}
