{
  "name": "web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/web/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "pack":{
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/tmp/gigya-wc-{projectVersion}.tgz"],
      "options": {
        "cwd": "dist/libs/web",
        "commands": [
          {
            "command": "pnpm pack --pack-destination ../../../tmp/libs"
          }
        ]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/libs/web",
        "commands": [
          {
            "command": "pnpm publish --access public gigya-wc-{projectVersion}.tgz --tag pre-alpha  --no-git-checks --registry https://registry.npmjs.org/"
          }
        ]
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/web",
        "main": "libs/web/src/index.ts",
        "tsConfig": "libs/web/tsconfig.lib.json",
        "assets": ["libs/web/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  }
}
